<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.CreateEvent">

    <!-- Event Name -->
    <TextView
        android:id="@+id/eventNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="18sp"
        android:fontFamily="@font/airbnbcereal_w_xbd"
        android:layout_marginHorizontal="5dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/evenName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Event Name"
        app:errorEnabled="true"
        app:errorIconDrawable="@null">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edEventName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@color/label"
        android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Event Date -->
    <TextView
        android:id="@+id/eventDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date"
        android:fontFamily="@font/airbnbcereal_w_xbd"
        android:layout_marginHorizontal="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Date"
        app:errorEnabled="true"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edEventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/label"
            android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/eventPlaceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Place"
        android:fontFamily="@font/airbnbcereal_w_xbd"
        android:layout_marginHorizontal="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/place"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Venue"
        app:errorEnabled="true"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/label"
            android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Event Price -->
    <TextView
        android:id="@+id/eventPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Price"
        android:textSize="18sp"
        android:fontFamily="@font/airbnbcereal_w_xbd"
        android:layout_marginHorizontal="5dp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventPrice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Price"
        app:errorEnabled="true"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/label"
            android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Event Description -->
    <TextView
        android:id="@+id/eventDescriptionLabel"
        android:layout_width="wrap_content"
        android:fontFamily="@font/airbnbcereal_w_xbd"
        android:layout_marginHorizontal="5dp"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Enter Description"
        app:errorEnabled="true"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/label"
            android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton

        android:id="@+id/submitEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

</LinearLayout>
