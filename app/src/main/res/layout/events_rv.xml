<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="347dp"
    android:layout_height="wrap_content"
   android:layout_margin="30dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    android:id="@+id/event_view"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_club"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@drawable/billu" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/event_name"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/lightText"
            android:text="@string/club_xyz"
            />
        <TextView
            android:id="@+id/txt_event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pricing"
            android:textSize="13sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/txt_date_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="80dp"
            android:textColor="@color/lightText"
            android:textSize="11sp"

            android:text="@string/date_posted" />
    </LinearLayout>





</androidx.cardview.widget.CardView>